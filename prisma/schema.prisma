// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  email     String @unique
  password  String
  firstName String
  lastName  String
}

model Photo {
  id            String       @id @default(auto()) @map("_id") @db.ObjectId
  publicId      String
  width         Int
  height        Int
  format        String
  size          Int
  uploadDate    DateTime
  collections   Collection[] @relation(fields: [collectionIds], references: [id])
  collectionIds String[]     @db.ObjectId @default([])
}

model Collection {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  type     String
  photos   Photo[]  @relation(fields: [photoIds], references: [id])
  photoIds String[] @db.ObjectId @default([])
}